{
  "id": "translate-plugin",
  "name": "智能翻译",
  "version": "2.0.4",
  "author": "Naimo Tools",
  "icon": "./ico.png",
  "description": "基于腾讯云的智能翻译插件，支持多语言互译",
  "category": "ai_artificial_intelligence",
  "enabled": true,
  "main": "./index.html",
  "preload": "./preload.js",
  "feature": [
    {
      "path": "text-translate",
      "name": "翻译",
      "type": "text",
      "icon": "./ico.png",
      "description": "智能文本翻译工具",
      "weight": 100,
      "anonymousSearchFields": [
        "翻译",
        "translate"
      ],
      "minLength": 1,
      "maxLength": 5000,
      "singleton": true,
      "lifecycleType": "reuse"
    }
  ],
  "settings": [
    {
      "name": "secretId",
      "title": "腾讯云 Secret ID",
      "description": "请输入您的腾讯云API Secret ID",
      "type": "input",
      "defaultValue": "",
      "required": true,
      "placeholder": "请输入腾讯云 Secret ID"
    },
    {
      "name": "secretKey",
      "title": "腾讯云 Secret Key",
      "description": "请输入您的腾讯云API Secret Key",
      "type": "input",
      "defaultValue": "",
      "required": true,
      "placeholder": "请输入腾讯云 Secret Key"
    },
    {
      "name": "region",
      "title": "服务区域",
      "description": "选择腾讯云服务区域",
      "type": "select",
      "defaultValue": "ap-chengdu",
      "option": {
        "options": [
          {
            "label": "成都",
            "value": "ap-chengdu"
          },
          {
            "label": "北京",
            "value": "ap-beijing"
          },
          {
            "label": "上海",
            "value": "ap-shanghai"
          },
          {
            "label": "广州",
            "value": "ap-guangzhou"
          },
          {
            "label": "香港",
            "value": "ap-hongkong"
          },
          {
            "label": "新加坡",
            "value": "ap-singapore"
          },
          {
            "label": "东京",
            "value": "ap-tokyo"
          }
        ]
      }
    }
  ]
}